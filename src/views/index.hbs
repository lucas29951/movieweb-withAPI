<div class="container p-4">

    <div class="row mb-5">
        <form class="d-flex" role="search" action="/" method="POST">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search" aria-label="Search" name="media_search">
                <span class="input-group-text"><i class="fa-solid fa-magnifying-glass"></i></span>
            </div>
        </form>
    </div>

    <div class="row">

        {{#each media}}
        <div class="col-md-3">
            <div class="card text-center profile-title-color card-media">
                <div class="card-body">
                    <a href="/media/{{title}}" class="link-deco">
                    <img src="{{poster}}" alt="poster" width="210">
                    <p class="m-2">{{title}}</p>
                    {{!--<p class="m-2">{{timeago created_at}}</p>--}}
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No results found.</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>
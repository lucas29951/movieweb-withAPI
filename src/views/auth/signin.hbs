<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header card-header text-bg-primary">
                    <h3 class="signin-header">
                        <i class="fa-solid fa-right-to-bracket me-1"></i> SignIn
                    </h3>
                </div>
                <div class="card-body">
                    <!--<img src="/img/disk-logo-hw.png" alt="logo" class="card-img-top mx-auto w-50">-->
                    <form action="/signin" method="POST">
                        <div class="form-group">
                            <input type="text" name="username" placeholder="Username" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" placeholder="Password" class="form-control">
                        </div>
                        <div class="form-group d-grid gap-2 col-md-12">
                            <button class="btn btn-success btn-block">Sign In</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>